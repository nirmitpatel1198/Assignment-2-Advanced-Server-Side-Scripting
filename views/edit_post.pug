extends layout

block content
  h1 #{title}
  form(method='POST', action='/posts/edit/'+post._id)
    #form-group
      label Title:
      input.form-control(name='title', type='text', value=post.title, required)
    #form-group
      label Author:
      input.form-control(name='author', type='text', value=post.author, required, disabled)
    #form-group
      label Body:
      textarea.form-control(name='body')= post.body
    br
    input.btn.btn-primary(type='submit',value='Submit')
